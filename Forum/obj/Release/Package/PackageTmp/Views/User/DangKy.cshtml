@model Forum.Models.NguoiDung
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12"></div>
        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
            <div style="border: 0.1px thin;padding:10px; border-radius: 7px; background-color:white; box-shadow: 0 10px 24px hsla(0,0%,0%,0.05), 0 20px 48px hsla(0, 0%, 0%, 0.05), 0 1px 4px hsla(0, 0%, 0%, 0.1);">
                <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
                <h2 style="text-align:center; font-family:Roboto; font-weight:revert; margin-top:30px; color:blue;">ĐĂNG KÝ THÀNH VIÊN</h2>
                <table align="center">
                    @using (Html.BeginForm("DangKy", "User"))
                    {
                        @Html.ValidationSummary(false)
                        <tr>
                            <td>Họ tên:</td>
                            <td>
                                @Html.TextBox("TenND")
                                @Html.ValidationMessageFor(model => model.TenND, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>Tên đăng nhập:</td>
                            <td>
                                @Html.TextBox("TenDangNhap")
                                @Html.ValidationMessageFor(model => model.TenDangNhap, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>Mật khẩu:</td>
                            <td>
                                @Html.Password("MatKhau")
                                @Html.ValidationMessageFor(model => model.MatKhau, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>Mật khẩu nhập lại:</td>
                            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>
                                @Html.TextBox("Email", null, new { type = "text", required = "required" })
                                @Html.ValidationMessageFor(model => model.Email, "(*)", new { @class = "text-danger"  })
                            </td>
                        </tr>
                        <tr>
                            <td>Điện thoại:</td>
                            <td>
                                @Html.TextBox("DienThoai", null, new { type = "text", required = "required" })
                                @Html.ValidationMessageFor(model => model.SDT, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>Chức vụ:</td>
                            <td>
                                @Html.TextBox("ChuyenNganh", null, new { type = "text", required = "required" })
                                @Html.ValidationMessageFor(model => model.ChucVu, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>Chuyên ngành:</td> 
                            <td>
                                @Html.TextBox("ChucVu",null ,new { type = "text", required = "required" })
                                @Html.ValidationMessageFor(model => model.ChuyenNganh, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>Ngày sinh:</td>
                            <td>
                                <input type="date" name="NgaySinh" required />
                                @Html.ValidationMessageFor(model => model.NgaySinh, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>

                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" value="Đăng ký" /> <input type="reset" value="Xóa Thông Tin" />
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
    </div>
</div>

